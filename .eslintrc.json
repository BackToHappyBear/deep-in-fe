{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": "off",
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": "off",
        "semi": "off",
        "no-unused-vars": "off",
        "no-console": "off",
        "no-undef": "off"
    }
}